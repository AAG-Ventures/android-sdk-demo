<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical"
    android:padding="@dimen/d24">

    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_background"
        android:alpha="0.8"
        android:gravity="center"
        android:visibility="visible">
        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            />
        <Button
            android:id="@+id/overlay_go_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d12"
            android:visibility="gone"
            android:text="Go back" />
        <TextView
            style="@style/h2_sb"
            android:id="@+id/no_wallets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bitcoin wallet with balance needed for transaction sign demo"
            android:visibility="gone"
            android:textColor="?attr/black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <Button
        android:id="@+id/go_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go back" />

    <TextView
        style="@style/h2_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d32"
        android:layout_marginBottom="@dimen/d12"
        android:gravity="center"
        android:text="Sign transaction"
        android:textColor="?attr/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From:"
        android:layout_marginBottom="@dimen/d6"
        android:textColor="?attr/black" />

    <TextView
        android:id="@+id/from_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="address"
        android:textColor="?attr/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:"
        android:layout_marginTop="@dimen/d24"
        android:layout_marginBottom="@dimen/d6"
        android:textColor="?attr/black" />

    <TextView
        android:id="@+id/to_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="2NFdZe8jeVÃ—Xn3cJBMe8yuU3FBkmHQN2mf2"
        android:textColor="?attr/black" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BTC amount:"
        android:layout_marginTop="@dimen/d24"
        android:layout_marginBottom="@dimen/d6"
        android:textColor="?attr/black" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="0.00001"
        android:textColor="?attr/black" />

    <TextView
        style="@style/h2_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d32"
        android:layout_marginBottom="@dimen/d12"
        android:gravity="left"
        android:text="Details:"
        android:textColor="?attr/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gas price:"
        android:layout_marginTop="@dimen/d24"
        android:layout_marginBottom="@dimen/d6"
        android:textColor="?attr/black" />

    <TextView
        android:id="@+id/gasPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text=""
        android:textColor="?attr/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gas limit:"
        android:layout_marginTop="@dimen/d24"
        android:layout_marginBottom="@dimen/d6"
        android:textColor="?attr/black" />

    <TextView
        android:id="@+id/gasLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text=""
        android:textColor="?attr/black" />

            <Button
                android:id="@+id/calculate_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d32"
                android:layout_marginBottom="@dimen/d12"
                android:text="Calculate fees" />

    <Button
        android:id="@+id/sign_custom_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d32"
        android:enabled="false"
        android:text="Sign" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>